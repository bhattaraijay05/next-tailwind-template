{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"baseUrl": "./app",
		"paths": {
			"*": ["./app/*"],
			"@assets/*": ["./assets/*"],
			"@components/*": ["./components/*"],
			"@config/*": ["./config/*"],
			"@constants/*": ["./constants/*"],
			"@hooks/*": ["./hooks/*"],
			"@context/*": ["./context/*"],
			"@helpers/*": ["./helpers/*"],
			"@elements/*": ["./elements/*"],
			"@utils/*": ["./utils/*"],
			"@shared/*": [
				"./shared/*"
			],
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
